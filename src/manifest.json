{
  "name": "Links to Jira",
  "short_name": "ptlinks",
  "description": "A non-official extension that highlights Jira issue IDs as links on various pages like GitHub PRs.",
  "version": "2.0.0",
  "manifest_version": 3,
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "http://*.planitpoker.com/board/*",
    "https://*.planitpoker.com/board/*",
    "https://github.com/*/*/pull/*"
  ],
  "content_scripts": [
    {
      "js": [
        "constants.js",
        "content.js"
      ],
      "matches": [
        "http://*.planitpoker.com/board/*",
        "https://*.planitpoker.com/board/*",
        "https://github.com/*/*/pull/*"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "96": "assets/icon96-original.png",
    "128": "assets/icon128.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}